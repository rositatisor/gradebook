{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block body %}
<div class="container">
    <div class="row justify-content-end bg login-bg">
        <div class="col-md-4 signup">
            <div class="card login">
                <form class="signup" method="post">
                    {% if app.user %}
                        <div class="mb-3 logged">
                            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}

                    {% if error %}
                        <div class="alert alert-danger invalid-credentials">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <div class="card-body login">
                        <h1 class="register-title">Please sign in</h1>
                        <div class="form-group">
                            {# <label for="inputEmail">Email</label> #}
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control signup" required autofocus placeholder="Email">
                        </div>
                        <div class="form-group">
                            {# <label for="inputPassword">Password</label> #}
                            <input type="password" name="password" id="inputPassword" class="form-control signup" required placeholder="Password">
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <button class="btn btn-primary" type="submit">Sign in</button>
                        <a class="login" href="{{ path('app_login') }}">Create an account</a>
                    </div>
                </form>
            </div>
		</div>
	</div>
{% endblock %}