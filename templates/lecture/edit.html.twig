{% extends 'base.html.twig' %}

{% block title %}Edit Lecture{% endblock %}

{% block body %}
    <h1>Edit Lecture</h1>
    <form action="{{path('lecture_update', {id:lecture.id})}}" method="POST">
        Name: <input type="text" name="lecture_name" value="{{lecture.name}}">
        Description: <input type="text" name="lecture_description" value="{{lecture.description}}">
        <button type="submit">Edit Lecture</button>
        {# <input type="hidden" name="token" value="{{csrf_token('')}}"/> #}
    </form>
{% endblock %}
