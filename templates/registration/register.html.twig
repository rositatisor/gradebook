{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="container">
		<div class="row justify-content-end registration-bg">
			<div class="col-md-4">
				<div class="card register">
					<div class="card-body">
						<h1 class="register-title">Register</h1>
						{{ form_start(registrationForm, { 'attr': {'class': 'registration'} }) }}
						<div class="form-group">
							{{ form_row(registrationForm.email, { 
								label: false,
								attr: {'class': 'form-control', 'placeholder':'Email'} }) }}
						</div>
						<div class="form-group">
							{{ form_row(registrationForm.plainPassword, {
								label: false,
								attr: {'class': 'form-control', 'placeholder':'Password'}
							}) }}
						</div>
						<div class="form-check custom">
							{{ form_row(registrationForm.agreeTerms, { attr: {'class': 'form-check-input custom'} }) }}
						</div>
						<button type="submit" class="btn btn-primary">Register</button>
						<a class="login" href="{{ path('app_login') }}">Already have an account? Sign in!</a>
						{{ form_end(registrationForm) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
