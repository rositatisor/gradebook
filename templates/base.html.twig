<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        
        <link href="http://localhost/gradebook/public/build/app.css?v={{ date().timestamp }}" rel="stylesheet">
        <script src="http://localhost/gradebook/public/build/app.js" defer></script>
        
        <!-- include libraries(jQuery, bootstrap) -->
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

        <!-- include summernote css/js -->
        <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>

        {% block stylesheets %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </head>
    <body>
        <main>
            <div class="container">
            {% include 'menu.html.twig'%}
                {% if errors is defined and errors|length > 0%}
                    {% include 'msg/validation.html.twig'%}
                {% endif %}
                {% if success is defined and success|length > 0%}
                    {% include 'msg/success.html.twig'%}
                {% endif %}
                {% block body %}{% endblock %}
            </div>
        </main>
    </body>
</html>
